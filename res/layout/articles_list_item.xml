<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView android:id="@+id/ArticleTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3sp"
        android:textStyle="bold"
        android:textColor="#3366aa"
        android:background="@android:color/white"
        android:textSize="16sp"
        android:maxHeight="46sp"
        android:typeface="serif"/>
       
    <TextView android:id="@+id/ArticleDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:textSize="15sp"
        android:maxHeight="62sp"
        android:maxLines="3"
        android:typeface="serif"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:drawableRight="@drawable/down_arrow"
        android:layout_below="@id/ArticleTitle"/>
        
    <LinearLayout android:id="@+id/dropDownBar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_below="@id/ArticleDescription"
    android:visibility="gone">
    
    	<Button android:id="@+id/shareButton"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="10sp"
        android:text="@string/article_share"
        android:drawableTop="@drawable/share"/>
        
    	<Button android:id="@+id/playlistButton"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="10sp"
        android:text="@string/mark_article"
        android:drawableTop="@drawable/add_article"/>
        
        <Button android:id="@+id/speakButton"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="10sp"
        android:text="@string/article_speak"
        android:drawableTop="@drawable/speech"/>
        
        <Button android:id="@+id/textOnlyButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textSize="10sp"
        android:text="@string/quick_read_article"
        android:drawableTop="@drawable/textonly"/>
        
        <Button android:id="@+id/browserButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textSize="10sp"
        android:text="@string/article_webpage"
        android:drawableTop="@drawable/browser"/>
                
    </LinearLayout>

</RelativeLayout>