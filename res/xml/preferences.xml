<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <ListPreference
           android:title="Language preference"
           android:summary="Select the style of English you would like to hear articles in"
           android:key="languagePref"
           android:defaultValue="US"
           android:persistent="true"
           android:entries="@array/language"
           android:entryValues="@array/language_values" /> 
  
    <ListPreference
           android:title="Reading speed"
           android:summary="Select the speech rate for reading articles"
           android:key="speedPref"
           android:defaultValue="1"
           android:persistent="true"
           android:entries="@array/readingSpeed"
           android:entryValues="@array/readingSpeed_values" />
                    
</PreferenceScreen>
